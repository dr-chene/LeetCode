<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="@+id/recycle_item_question_pr_num"
        app:layout_constraintStart_toEndOf="@+id/recycle_item_question_pr_num">

        <TextView
            android:id="@+id/recycle_item_question_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="34dp"
            android:layout_marginBottom="34dp"
            android:text="无重复字符的最长子串"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/recycle_item_question_difficulty"
            app:layout_constraintStart_toEndOf="@+id/recycle_item_qustion_id"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recycle_item_qustion_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/recycle_item_question_content"
            app:layout_constraintEnd_toEndOf="@+id/recycle_item_question_difficulty"
            app:layout_constraintStart_toStartOf="@+id/recycle_item_question_difficulty" />

        <TextView
            android:id="@+id/recycle_item_question_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="58dp"
            android:layout_marginLeft="58dp"
            android:layout_marginEnd="54dp"
            android:layout_marginRight="54dp"
            android:text="中等"
            android:textColor="@color/orange_dark"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/recycle_item_question_passrate"
            app:layout_constraintEnd_toStartOf="@+id/recycle_item_question_passrate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/recycle_item_question_passrate" />

        <TextView
            android:id="@+id/recycle_item_question_passrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="144dp"
            android:layout_marginLeft="144dp"
            android:text="通过率："
            android:textColor="@color/grey_dark"
            android:textSize="14dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/recycle_item_question_pr_num"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/recycle_item_question_pr_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:text="36.6%"
            android:textColor="@color/grey_dark"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/recycle_item_question_passrate" />

        <TextView
            android:id="@+id/recycle_item_question_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="26dp"
            android:text="题解："
            android:textSize="14dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/recycle_item_question_answer_num"
            app:layout_constraintStart_toEndOf="@+id/recycle_item_question_content"
            tools:textColor="@color/grey_dark" />

        <TextView
            android:id="@+id/recycle_item_question_answer_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5133"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/recycle_item_question_pr_num"
            app:layout_constraintStart_toEndOf="@+id/recycle_item_question_answer"
            app:layout_constraintTop_toTopOf="@+id/recycle_item_question_pr_num"
            tools:textColor="@color/grey_dark" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="48dp"
            android:layout_height="28dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            app:layout_constraintEnd_toStartOf="@+id/recycle_item_question_content"
            app:layout_constraintTop_toTopOf="@+id/recycle_item_question_content"
            app:srcCompat="@drawable/ic_questions_show" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>